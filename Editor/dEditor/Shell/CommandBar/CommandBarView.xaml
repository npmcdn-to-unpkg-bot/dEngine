<UserControl x:Class="dEditor.Shell.CommandBar.CommandBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:shell="clr-namespace:dEditor.Shell"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <shell:ComboBoxEx x:Name="ComboBox" ItemsSource="{Binding RecentCommands}"
							  IsEditable="True"
                              TextBoxBase.TextChanged="ComboBox_OnTextChanged"
							  BorderThickness="1" 
							  BorderBrush="#CCC"
							  VerticalAlignment="Top"
							  Background="White"
							  Margin="4,0,4,4"
							  PreviewKeyDown="ComboBox_KeyDown" Style="{DynamicResource ComboBoxStyle1}">
        <ComboBox.ItemContainerStyle>
            <Style TargetType="ComboBoxItem">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="#CCC"></Setter>
            </Style>
        </ComboBox.ItemContainerStyle>
    </shell:ComboBoxEx>
</UserControl>

