<UserControl x:Class="dEditor.Shell.StatusBar.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:statusBar="clr-namespace:dEditor.Shell.StatusBar"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="1024" d:DataContext="{d:DesignInstance statusBar:StatusBarViewModel}"
             Background="#4281F4"
             Height="23">
    <Grid Margin="4,3,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <TextBlock FontSize="13" Text="{Binding Path=Text}" Foreground="White"
               VerticalAlignment="Center" Grid.Column="0"/>
        <TextBlock FontSize="13" Text="{Binding Path=LineStr}" Foreground="White"
               VerticalAlignment="Center" Grid.Column="1"/>
        <TextBlock FontSize="13" Text="{Binding Path=CharStr}" Foreground="White"
               VerticalAlignment="Center" Grid.Column="2"/>
    </Grid>
</UserControl>