<UserControl x:Class="dEditor.Widgets.Properties.Inspectors.Content.ContentEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dEditor.Widgets.Properties.Inspectors.Content"
             xmlns:services="clr-namespace:dEditor.Framework.Services"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance local:ContentEditorViewModel}">
    <DockPanel>
        <Image Visibility="Collapsed" DockPanel.Dock="Left" Width="32" Height="32" Margin="7" Source="/dEditor;component/Content/Icons/Toolbar/SoundFile_256x.png"/>
        <ComboBox DockPanel.Dock="Left" IsEditable="True" Height="24" services:InputBindingManager.UpdatePropertySourceWhenEnterPressed="TextBox.Text" Text="{Binding Path=Value, TargetNullValue=''}" />
    </DockPanel>
</UserControl>
